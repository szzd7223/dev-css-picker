{
    "manifest_version": 3,
    "name": "CSS Picker",
    "version": "1.0",
    "description": "A minimal Chrome Extension to pick and view CSS elements.",
    "permissions": [
        "activeTab",
        "scripting",
        "sidePanel"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_title": "Open CSS Picker"
    },
    "side_panel": {
        "default_path": "sidebar/index.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}